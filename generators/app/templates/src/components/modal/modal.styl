.modal-holder
  position fixed
  width 100%
  height 100%
  min-height 100%
  display none
  z-index 100
  .modal-clickscreen
    background rgba(255,255,255,0.3)
    height 100%
    display flex
    justify-content center
    align-items flex-start
    .modal-window
      margin-top 4em
      padding 1em
      background white
      border 1px solid #aaa
      width 80%
      max-width 30em
      max-height 80vh
      overflow-y scroll